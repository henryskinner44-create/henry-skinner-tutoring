    <script>
      // Set year
      document.getElementById('y').textContent = new Date().getFullYear();

      // Mailto handler for the form
      const form = document.getElementById('contactForm');
      form.addEventListener('submit', (e) => {
        e.preventDefault();
        const data = new FormData(form);
        const name = encodeURIComponent(data.get('name') || '');
        const email = encodeURIComponent(data.get('email') || '');
        const date = encodeURIComponent(data.get('date') || '');
        const time = encodeURIComponent(data.get('time') || '');
        const message = encodeURIComponent(data.get('message') || '');
        const subject = `Babysitting enquiry from ${decodeURIComponent(name)}`;
        const body = `Parent name: ${decodeURIComponent(name)}%0AEmail: ${decodeURIComponent(email)}%0APreferred date: ${decodeURIComponent(date)}%0ATime: ${decodeURIComponent(time)}%0A%0ADetails:%0A${decodeURIComponent(message)}`;
        const mailto = `mailto:Henry.Skinner1@hotmail.com?subject=${encodeURIComponent(subject)}&body=${encodeURIComponent(body)}`;
        window.location.href = mailto;
      });
    </script>
